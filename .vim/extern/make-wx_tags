#!/bin/bash
cd /usr/include/wx-2.8 &&
ctags -R -f ~/ref/doc/vim/wx-tags --options=$HOME/.vim/extern/ctags-cpp \
    -I WXDLLEXPORT \
    -I WXDLLEXPORT_DATA \
    -I WXDLLEXPORT_DATA_CORE \
    -I WXDLLIMPEXP_FWD_BASE      \
    -I WXDLLIMPEXP_BASE\
    -I WXDLLIMPEXP_FWD_NET       \
    -I WXDLLIMPEXP_NET\
    -I WXDLLIMPEXP_FWD_CORE      \
    -I WXDLLIMPEXP_CORE\
    -I WXDLLIMPEXP_FWD_ADV       \
    -I WXDLLIMPEXP_ADV\
    -I WXDLLIMPEXP_FWD_QA        \
    -I WXDLLIMPEXP_QA\
    -I WXDLLIMPEXP_FWD_HTML      \
    -I WXDLLIMPEXP_HTML\
    -I WXDLLIMPEXP_FWD_GL        \
    -I WXDLLIMPEXP_GL\
    -I WXDLLIMPEXP_FWD_XML       \
    -I WXDLLIMPEXP_XML\
    -I WXDLLIMPEXP_FWD_XRC       \
    -I WXDLLIMPEXP_XRC\
    -I WXDLLIMPEXP_FWD_AUI       \
    -I WXDLLIMPEXP_AUI\
    -I WXDLLIMPEXP_FWD_RICHTEXT  \
    -I WXDLLIMPEXP_RICHTEXT\
    -I WXDLLIMPEXP_FWD_MEDIA     \
    -I WXDLLIMPEXP_MEDIA\
    -I WXDLLIMPEXP_FWD_STC       \
    -I WXDLLIMPEXP_STC\
    -I WXDLLIMPEXP_DATA_BASE\
    -I WXDLLIMPEXP_DATA_NET\
    -I WXDLLIMPEXP_DATA_CORE\
    -I WXDLLIMPEXP_DATA_ADV\
    -I WXDLLIMPEXP_DATA_QA\
    -I WXDLLIMPEXP_DATA_HTML\
    -I WXDLLIMPEXP_DATA_GL\
    -I WXDLLIMPEXP_DATA_XML\
    -I WXDLLIMPEXP_DATA_XRC\
    -I WXDLLIMPEXP_DATA_AUI\
    -I WXDLLIMPEXP_DATA_RICHTEXT\
    -I WXDLLIMPEXP_DATA_MEDIA\
    -I WXDLLIMPEXP_DATA_STC \
    . &&

cd ~/ref/doc/vim &&
sed -i 's/wxWindowGTK/wxWindow/g' wx-tags &&
echo "done"

